[Unit]
Description=ArxivJS Node.js Server
After=network.target

[Service]
Type=simple
User=doosik
WorkingDirectory=/home/doosik/works/arxivjs
ExecStart=/bin/bash -c 'source /home/doosik/.nvm/nvm.sh && /home/doosik/.nvm/versions/node/v22.19.0/bin/node /home/doosik/works/arxivjs/index.js'
Restart=on-failure
Environment=NODE_ENV=production
Environment=PORT=8765

[Install]
WantedBy=multi-user.target
